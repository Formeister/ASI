
<div class="row">
  <div class="col-md-offset-2 col-md-8 text-center">
    <h1 style="margin-bottom: 0;"><%= l @day.date, format: :day %></h1>
    <h2 style="margin-top: 0;"><%= l @day.date, format: :month %></p></h2>

    <% if logged_in? %>
      <button class="btn btn-default" data-toggle="collapse" data-target="#foo">Dodaj wydarzenie</button><br><br>

      <div id="foo" class="collapse">
        <%= form_for([current_user, current_user.user_happenings.build]) do |f| %>
            <p>
              <%= f.label :year %><br>
              <%= f.text_field :year %>
            </p>
            <p>
              <%= f.label :body %><br>
              <%= f.text_area :body %>
            </p>
              <%= f.hidden_field :day_id, value: @day.id %>
            <p>
              <%= f.submit "Utwórz wydarzenie" %>
            </p>
        <% end %>
      </div>

      <p><strong><br>Zdarzyło się:</strong></p>

      <div>
        <% current_user.user_happenings.order(:year).each do |user_happening|
          if user_happening.day_id == @day.id %>
            <p><strong><%= user_happening.year %>r.</strong></p>
            <p style="margin-bottom: 0em;"><%= user_happening.body %></p>
            <small><%= link_to 'Usuń wydarzenie', [user_happening.user, user_happening],
                          method: :delete,
                          data: { confirm: 'Jesteś pewien?' } %></small><br><br>
          <% end %>
        <% end %>
      </div>
      <hr>
    <% else %>
        <p><strong><br>Zdarzyło się:</strong></p>
    <% end %>

   <!-- WYDARZENIA Z WIKIPEDII -->
    <% wiki_happenings.each do |happening| %>
      <p><b><%= happening.at('a').text %></b></p>
      <!-- Jeżeli więcej niż jedno wydarzenie w roku -->
      <%
      if happening.css('li').length > 0
        happening.css('li').each do |j|
      %>
        <p><%= j.text %></p>
      <%
        end
      else
        # Usuwanie daty
        happening.at('a').remove
      %>
        <!-- Usuwanie myślnika -->
        <p><%= happening.text[2..-1].gsub('\n', '') %></p>
      <%
      end
    end
    %>

  </div>
</div>